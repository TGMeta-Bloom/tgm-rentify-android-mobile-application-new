<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 
        FORCE DARK THEME HACK:
        Since we cannot edit Layouts/Kotlin to remove hardcoded light colors (like #F5F5F5),
        we use the System's "Force Dark" feature.
        
        We inherit from a LIGHT theme so Force Dark activates.
        
        FIX: Added tools:targetApi="29" to suppress the red line warning.
             This attribute is only available on Android 10 (API 29) and above.
             Older devices will simply ignore it.
    -->
    <style name="Base.Theme.TGMRentify" parent="Theme.Material3.Light.NoActionBar" tools:targetApi="29">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Enable Force Dark to invert hardcoded HEX colors -->
        <item name="android:forceDarkAllowed">true</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/app_navbar_blue</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Ensure default background is dark (if not hardcoded) -->
        <item name="android:windowBackground">@color/screen_background</item>
        <item name="android:colorBackground">@color/screen_background</item>
    </style>

    <style name="Theme.TGMRentify" parent="Base.Theme.TGMRentify" />
</resources>