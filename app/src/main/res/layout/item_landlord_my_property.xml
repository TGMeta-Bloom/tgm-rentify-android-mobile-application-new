<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    tools:ignore="SpellCheckingInspection">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_property_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_property_image2"
                android:contentDescription="@string/content_desc_property_image"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F0F8FF">

            <TextView
                android:id="@+id/tv_property_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Cozy Apartment in Colombo 7"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_property_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3-bedroom apartment with sea\nview and rooftop gym."
                android:textColor="#333333"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_property_location_icon"
                    android:contentDescription="@string/content_desc_location_icon"
                    app:tint="#333333"/>

                <TextView
                    android:id="@+id/tv_property_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Colombo"
                    android:textColor="#333333"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_property_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rs. 17 00000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_property_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Apartment"
                android:textColor="#333333"
                android:layout_marginTop="4dp"/>

            <!-- Added Status Field -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_property_available_icon"
                    android:contentDescription="Status Icon"
                    app:tint="#333333"/>

                <TextView
                    android:id="@+id/tv_property_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Available"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_property_phone_icon"
                    android:contentDescription="@string/content_desc_phone_icon"
                    app:tint="#333333"/>

                <TextView
                    android:id="@+id/tv_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="077-3344556"
                    android:textColor="#333333"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_edit"
                    app:backgroundTint="#5D7FA3"
                    app:cornerRadius="16dp"
                    android:minHeight="48dp"
                    android:paddingHorizontal="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_delete"
                    app:backgroundTint="#D47F7F"
                    app:cornerRadius="16dp"
                    android:minHeight="48dp"
                    android:paddingHorizontal="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>