<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:ignore="SpellCheckingInspection">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_desc_tgm_logo"
                android:src="@drawable/ic_property_tgm_logo_new" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_desc_tgm_text"
                android:src="@drawable/ic_tgm_rentify_property" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:contentDescription="@string/content_desc_back_button"
                    android:src="@drawable/ic_property_arrow_back2"
                    app:tint="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_hello"
                                    android:textColor="#333333" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="@string/text_wave" />
                                <TextView
                                    android:id="@+id/tv_user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    tools:text="Mihili De Silva"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/ic_property_rounded_blue_background"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="2dp"
                                android:text="@string/text_landlord"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_profile_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/content_desc_profile_image"
                            android:src="@drawable/ic_property_profile_image" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_add_property_here"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:shadowColor="@color/landlord_text_stroke_color"
                android:shadowRadius="5"
                android:shadowDx="2"
                android:shadowDy="2"
                android:layout_marginBottom="16dp"/>

            <!-- Form Fields -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_property_title"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_property_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_property_title"
                android:textSize="14sp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:inputType="text"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                tools:ignore="Autofill,VisualLintTextFieldSize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_property_description"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_property_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_property_description"
                android:textSize="14sp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="2"
                android:gravity="top|start"
                tools:ignore="Autofill,VisualLintTextFieldSize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_property_district"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_property_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_property_district"
                android:textSize="14sp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                tools:ignore="Autofill,VisualLintTextFieldSize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_price"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_property_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_price"
                android:inputType="number"
                android:textSize="14sp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                tools:ignore="Autofill,VisualLintTextFieldSize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_property_type"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/spinner_property_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_add_property_image"
                android:textColor="#000000"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3">

                <ImageView
                    android:id="@+id/iv_property_image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/content_desc_property_preview"
                    android:src="@drawable/ic_property_image2"
                    tools:ignore="ImageContrastCheck"/>

                <ImageView
                    android:id="@+id/btn_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_property_camera"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="14dp"
                    android:contentDescription="@string/content_desc_add_image"
                    app:tint="@color/black"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_availability"
                android:textColor="#000000"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/spinner_availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_contact_number"
                android:textColor="#000000"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/et_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/hint_contact_number"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="14sp"
                android:background="@drawable/nav_drawer_rounded_corners"
                android:backgroundTint="#D3D3D3"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                tools:ignore="Autofill,VisualLintTextFieldSize"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_post_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_post_property_btn"
                android:textColor="@color/black"
                android:layout_gravity="center"
                app:backgroundTint="#02557E"
                app:cornerRadius="20dp"
                android:paddingHorizontal="32dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>