<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.myapplication.view.TenantFeedFragment"
        android:label="Home"
        tools:layout="@layout/fragment_tenant_feed">

        <action
            android:id="@+id/action_feedFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />

        <action
            android:id="@+id/action_feedFragment_to_myPostsFragment"
            app:destination="@id/myPostsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.myapplication.view.TenantAddPostFragment"
        android:label="Add Post"
        tools:layout="@layout/fragment_tenant_add_post" />

    <fragment
        android:id="@+id/myPostsFragment"
        android:name="com.example.myapplication.view.TenantMyPostsFragment"
        android:label="My Posts"
        tools:layout="@layout/fragment_tenant_my_posts" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myapplication.view.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_LandlordAddPropertyFragment"
            app:destination="@id/landlordAddPropertyFragment" />
    </fragment>

    <fragment
        android:id="@+id/landlordAddPropertyFragment"
        android:name="com.example.myapplication.view.LandlordAddPropertyFragment"
        android:label="Add Property"
        tools:layout="@layout/fragment_landlord_add_property" />

    <fragment
        android:id="@+id/nav_saved_properties"
        android:name="com.example.myapplication.view.TenantSavedPropertyFragment"
        android:label="Saved Properties"
        tools:layout="@layout/fragment_tenant_saved_properties" />

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.myapplication.view.TenantLibraryFragment"
        android:label="Library"
        tools:layout="@layout/fragment_tenant_library" />

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.myapplication.view.TenantAnalyticsFragment"
        android:label="Analytics"
        tools:layout="@layout/fragment_tenant_analytics" />
</navigation>